#
# LDAP Defaults
#

# See ldap.conf(5) for details
# This file should be world readable but not world writable.

BASE   dc=doubledowncasino,dc=com
URI    ldap://{{ sssd_conf.ldap_servers|join(' ldap://') }}

#SIZELIMIT      12
#TIMELIMIT      15
#DEREF          never

TLS_CACERT      {{ sssd_conf.ca_cert_path }}/ca.asc
TLS_REQCERT     allow

# Turning this off breaks GSSAPI used with krb5 when rdns = false
SASL_NOCANON    on
